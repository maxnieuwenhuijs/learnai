{
  "name": "howtoworkwith-ai-server",
  "version": "1.0.0",
  "description": "E-learning Platform Backend API for howtoworkwith.ai",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:status": "pm2 status",
    "db:sync": "node -e \"require('./src/config/database').sequelize.sync({force: false})\"",
    "db:seed": "node seed-comprehensive-data.js",
    "db:reset": "node src/scripts/reset-and-seed.js",
    "create-super-admin": "node src/scripts/create-super-admin.js",
    "clear-data": "node src/scripts/clear-all-data.js",
    "postinstall": "echo 'Installation completed. Please configure your .env file and run: npm run pm2:start'"
  },
  "keywords": ["elearning", "api", "nodejs", "express", "mysql"],
  "author": "HowToWorkWith.AI",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.3",
    "nodemailer": "^7.0.5",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-microsoft": "^2.1.0",
    "pdfkit": "^0.17.1",
    "sequelize": "^6.37.7",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}